<nav class="header">
    <ol class="header-breadcrumbs print-hide">
        {% set continue = true %}
        <li class="header-logo"><a href="/"
            {% if page.url == "/" %}
                aria-current="page"
                {% set continue = false %}
            {% endif %}
            ><img src="/assets/images/header-white.svg" alt="The Eastford Communicator" width="314.298" height="61.68"></a></li>
        {% if issue and continue %}
            <li><a href="/{{ issue.volume or volume }}/{{ issue.issue or issue }}/"
                {% if tags == "issue" %}
                    aria-current="page"
                    {% set continue  = false %}
                {% endif %}>
                vol. {{ issue.volume or volume }}, issue {{ issue.issue or issue }}
            </a></li>
        {% endif %}
        {% if continue %}
            <li><a href="{{ page.url }}" aria-current="page">{{ title | safe }}</a></li>
        {% endif %}
    </ol>
</nav>